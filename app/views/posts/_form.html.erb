<%= form_for @post do |m| %>
  <%= m.text_field :title, placeholder: 'Title' %>
  <%= m.text_area :description, placeholder: 'Description', rows: '3' %>
  <%= m.file_field :avatar %>
  <%= m.submit 'Upload', id: 'fileUpload', data: { disable_with: 'Uploading' } %>
<% end %>
